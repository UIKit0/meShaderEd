<?xml version="1.0"?>

<node name="color_RGB" type="rsl_code" author="Libero Spagnolini">
	<help>Simple color builder in RGB space.</help>
	<input>
		<property name="red" type="float" default="1.0" subtype="slider" range="0 1 0.01"/>
		<property name="green" type="float" default="1.0" subtype="slider" range="0 1 0.01"/>
		<property name="blue" type="float" default="1.0" subtype="slider" range="0 1 0.01"/>
	</input>
	<output>
		<property name="result" type="color"/>
	</output>
	<code><![CDATA[
	  $(result) = color( $(red), $(green), $(blue) );
	]]>
	</code>		
</node>