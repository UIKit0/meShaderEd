<?xml version="1.0"?> 

<node name="pointToColor" type="rsl_code">
	<help>Point to color converter.</help>
	<input>
		<property name="inPoint" type="point" default="point (0, 0, 0)" />
	</input>
	<output>
		<property name="outColor" type="color"/>
	</output>
	<code>
	  <![CDATA[
	  $(outColor) = color(xcomp($(inPoint)),ycomp($(inPoint)),zcomp($(inPoint)) );
	  ]]>
	</code>
</node>