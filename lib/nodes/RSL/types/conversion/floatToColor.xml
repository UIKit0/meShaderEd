<?xml version="1.0"?> 

<node name="floatToColor" type="rsl_code">
	<help>Float to color converter.</help>
	<input>
		<property name="inFloat" type="float" default="1.0" />
	</input>
	<output>
		<property name="outColor" type="color"/>
	</output>
	<code>
	  <![CDATA[
	  $(outColor) = color($(inFloat), $(inFloat), $(inFloat));
	  ]]>
	</code>
</node>