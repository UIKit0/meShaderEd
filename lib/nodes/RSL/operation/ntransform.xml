<?xml version="1.0"?> 

<node name="ntransform" author="mesh">
	<help>Transform a normal into a specific coordinate system.</help>
	<input>
		<property name="space" type="string" default="shader" detail="uniform"/>		
		<property name="inNormal" type="normal"/>				
	</input>
	<output>
		<property name="outNormal" type="normal"/>		
	</output>
	<code>
<![CDATA[
$(outNormal) = transform($(space), $(inNormal));
]]>
	</code>
</node>
