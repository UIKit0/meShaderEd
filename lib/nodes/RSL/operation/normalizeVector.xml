<?xml version="1.0"?>

<node name="normalizeVector" author="mesh">
	<help>Normalize input vector.</help>
	<input>
		<property name="input" type="vector" default="vector (0, 0, 0)" />
	</input>
	<output>
		<property name="NV" type="vector"/>
	</output>
	<code>
<![CDATA[
$(NV) = normalize( $(input) );
]]>
	</code>	
</node>
