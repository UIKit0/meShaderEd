<?xml version="1.0"?>

<node name="gradeFromCC" label="gradeCC" author="DRL">
	<help>Remap color in [0-1] range to new value between defined min and max.</help>
	<input>
		<property name="input" type="color" default="color(0)"/>
		<property name="min" type="color" default="color(0)" detail="uniform"/>
		<property name="max" type="color" default="color(1)" detail="uniform"/>
	</input>
	<output>
		<property name="result" type="color"/>
	</output>
	<code><![CDATA[

$(result) = $(min) + $(input) * ( $(max) - $(min) );
	]]>
	</code>
</node>
