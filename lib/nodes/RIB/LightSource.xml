<?xml version="1.0"?>

<node name="LightSource" author="mesh" type="rib">
  <help>Connect RIB code node</help>
	<input>
	  <property name="handle" type="int" default="0" provider="attribute"/>
	  <property name="light" type="rib" default="LightSource &quot;distantlight&quot;" />
	</input>
	<output>
	  <property name="rib_out" label="rib" type="rib" default=""/>
	</output>
	<control_code>
	</control_code>
	<code>
  <![CDATA[
  $(light) $(handle)
  ]]>
	</code>		
</node>